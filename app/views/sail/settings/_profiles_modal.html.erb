<div id="profiles-modal" style="display: none;">
  <h1>Profiles</h1>
  <hr>

  <div class="profile-entry">
    <input id="new-profile-input" type="text" placeholder="New profile: save a current snapshot of your settings">
    <button class="btn-sail">SAVE</button>
    <div class="clearfix"></div>
  </div>

  <div>
    <% Sail::Profile.select(:name).each do |profile| %>
      <div class="profile-entry">
        <span class="entry-name"><%= profile.name.titleize %></span>

        <button class="btn-sail">DELETE</button>
        <button class="btn-sail">ACTIVATE</button>
        <button class="btn-sail">SAVE</button>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>
